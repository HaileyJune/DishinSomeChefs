@{
    ViewData["Title"] = "New Dish Page";
}
@using DishinSomeChefs.Models
@model Dish
<h1>Add A Dish!</h1>
<a href="/">Go Home</a>

<form asp-action="CreateDish" asp-controller="Home" method="post">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name"></label>
        <input asp-for="Name">
        <div></div>
        
        <span asp-validation-for="ChefId"></span>
        <label asp-for="ChefId"></label>
        <!-- <input asp-for="Chef"> -->
        <!-- make dropdown -->
        <select asp-for="ChefId">
            @foreach (var c in ViewBag.Chefs)
            {
    		<option value=@c.ChefId>@c.FirstName @c.LastName</option>
            }
    	</select>
        <div></div>

        <span asp-validation-for="Tastiness"></span>
        <label asp-for="Tastiness"></label>
        <select asp-for="Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <div></div>

        <span asp-validation-for="Calories"></span>
        <label asp-for="Calories"></label>
        <input asp-for="Calories">
        <div></div>

        <span asp-validation-for="Description"></span>
        <label asp-for="Description"></label>
        <input asp-for="Description">
        <div></div>

        
        <input value="Add Dish" type="submit">    
    </form>